{% set LOGBUCKET = "log-bucket-" + env["deployment"]  %}

resources:
- type: storage.v1.bucket
  name: {{ LOGBUCKET }}
  properties:
    predefinedAcl: projectPrivate
    projection: full
    location: US
    storageClass: STANDARD
    
- type: storage.v1.bucket
  name: bucket-{{ env["deployment"] }}
  properties:
    retentionPolicy:
      isLocked: false
    encryption:
      defaultKmsKeyName: default-kem-key
    predefinedAcl: projectPrivate
    projection: full
    location: US
    storageClass: STANDARD
    defaultObjectAcl:
      - bucket: bucket-{{ env["deployment"] }}
        domain: www.google.com
        email: scoobydoo@google.com
        # 657686986194 is the number for project ccit-testing
        entity: project-editors-657686986194
        role: READER
        projectTeam:
          team: editors
          projectNumber: 657686986194
    cors:
      - maxAgeSeconds: 10
        method:
          - GET
          - POST
          - OPTIONS
        origin:
          - '*'
        responseHeader:
          - Content-Type
          - Last-Modified
          - Expires
    lifecycle:
      rule:
        - action:
            type: Delete
          condition:
            age: 30
            isLive: true
        - action:
            type: Delete
          condition:
            isLive: false
            numNewerVersions: 3
    logging:
      logBucket: $(ref.{{ LOGBUCKET }}.name)
      logObjectPrefix: log-prefix
    acl:
    - bucket: $(ref.{{ LOGBUCKET }}.name)
      domain: www.google.com
      email: logging
      role: OWNER #}
    versioning:
      enabled: false
    website:
      mainPageSuffix: http://www.google.com/
      notFoundpage: http://www.google.com/not-found
    iamConfiguration:
      uniformBucketLevelAccess:
        enabled: false
    defaultEventBasedHold: false
